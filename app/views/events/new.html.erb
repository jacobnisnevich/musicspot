<%= render partial: './groups/header', locals: {selected: 'new_event'} %>

<div class="container">
  <h1>Create New Event</h1>

  <%= form_for @event, :url => { :controller => :events, :action => :submit} do |f| %>
    <div id="new-event-form">
      <div class="form-group">
        <div class="label">
          <%= f.label :name %>
        </div>
        <div class="value">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="label">
          <%= f.label :location, "Zip code" %>
        </div>
        <div class="value">
          <%= f.text_field :location, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="label">
          <%= f.label :start_datetime %>
        </div>
        <div class="value">
          <%= datetime_select :event, :start_datetime %>
        </div>
      </div>
      <div class="form-group">
        <div class="label">
          <%= f.label :end_datetime %>
        </div>
        <div class="value">
          <%= datetime_select :event, :end_datetime %>
        </div>
      </div>
      <div class="form-group">
        <div class="label">
          <%= f.label :description %>
        </div>
        <div class="value">
          <%= f.text_area :description, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="label">
          <%= f.label :image %>
        </div>
        <div class="value">
          <%= f.text_field :image, class: 'form-control' %>
        </div>
      </div>
      <div class="button-container">
        <%= f.submit "Create Event", class: "button" %>
      </div>
    </div>
  <% end %>
</div>